{% extends 'base.html.twig' %}
{% block body %}
				<header id="header" class="col-full">
					<div id="logo">
						<h1 class="site-title">Site web marchand</h1>
					</div>
					<nav id="site-navigation" class="main-navigation" role="navigation">
						<button class="menu-toggle" aria-controls="site-navigation" aria-expanded="false">
							<span>Menu</span>
						</button>
						<div class="menu">
							<ul class="nav-menu">
								<li class="page_item page-item-1">
									<a href="/afficheRecherche">Rechercher
										un article</a>
								</li>
								<li class="page_item page-item-2 current_page_item focus">
									<a href="/accederAuPanier">Panier</a>
								</li>
							</ul>
						</div>
					</nav>
				</header>
				<div id="popup">
					<div>ete vous sur de vouloir le suprimmer ?</div>
					<button id="popupNon">
						non
					</button>
					<button id="popupOui">
						oui
					</button>
				</div>
				<div id="content" class="site-content">
					<div class="col-full">
						<header class="entry-header">
							<h1 class="entry-title">Panier</h1>
						</header><!-- .entry-header -->
						<div class="entry-content">
							<div class="woocommerce">
								<form
									id="panierForm"
									class="woocommerce-cart-form"							
									action="/recalculerPanier"
									name="panier" method="post">
									<table class="shop_table shop_table_responsive cart woocommerce-cart-form__contents" cellspacing="0">
										<thead>
											<tr>
												<th class="product-remove"></th>
												<th class="product-thumbnail"></th>
												<th class="product-name">Produit</th>
												<th class="product-price">Prix</th>
												<th class="product-quantity">Quantité</th>
												<th class="product-subtotal">Total</th>
											</tr>
										</thead>
										<tbody>
										{% for lignePanier in panier.lignesPanier %}
											<tr id="tr_{{ lignePanier.article.id }}" class="woocommerce-cart-form__cart-item cart_item">
												<td class="product-remove"><a id="remove_{{lignePanier.article.id}}" class="remove"
													title="Remove this item"
													<!--href="/supprimerLigne?id={{ lignePanier.article.id }}"--> >×</a>
												</td>
												<td class="product-thumbnail"><img
													class="attachment-shop_thumbnail wp-post-image" width="145"
													height="145" alt="hoodie_4_front"
													src="{{ lignePanier.article.image }}"></td>
												<td class="product-name">{{ lignePanier.article.titre }}</td>
												<td class="product-price"><span id="amount_u_{{lignePanier.article.id}}" class="amount">{{ lignePanier.prixUnitaire }}€</span></td>
												<td class="product-quantity">
													<div class="quantity">
														<label class="screen-reader-text" for="quantity_{{ lignePanier.article.id }}">Quantity</label>
														<input id="quantity_{{ lignePanier.article.id }}" class="input-text qty text" type="number"
															 size="4" title="Qty" value="{{ lignePanier.quantite }}"
															name="cart[{{ lignePanier.article.id }}][qty]"
															min="0" step="1">
													</div>
												</td>
												<td class="product-subtotal"><span id="amount_{{ lignePanier.article.id }}" class="amount total_ligne">{{ lignePanier.prixTotal }}€</span></td>
											</tr>
											{% endfor %}
											<!--<tr>
												<td class="actions" colspan="6"><input class="button"
													type="submit" value="Mise à jour du panier" name="update_cart" /></td>
											</tr>-->
										</tbody>
									</table>
								</form>
								<div class="cart-collaterals">
									<div class="cross-sells"></div>
									<div class="cart_totals ">
										<h2>Total de la commande</h2>
										<table cellspacing="0">
											<tbody>
												<tr class="cart-subtotal">
													<th>Sous-total</th>
													<td><span id="totalSansCharge" class="amount">{{ panier.total }}€</span></td>
												</tr>
												<tr class="shipping">
													<th>Frais de port</th>
													<td>Gratuit</td>
												</tr>
												<tr class="order-total">
													<th>Total</th>
													<td><strong> <span id="totalAvecCharge" class="amount">{{ panier.total }}€</span>
													</strong></td>
												</tr>
											</tbody>
										</table>
										<div class="wc-proceed-to-checkout">
											<a
												id="validerPanier"
												href="/commanderPanier"
												class="checkout-button button alt wc-forward">Effectuer la
												commande</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div><!-- .col-full -->
				</div><!-- #content -->
{% endblock %}
{% block javascripts %}
	<script type="text/javascript" src="/js/panier.js"></script>
{% endblock %}